rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isParticipant() {
      return resource.data.white == request.auth.uid || resource.data.black == request.auth.uid;
    }

    match /artifacts/{appId}/public/data/games/{gameId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn()
        && request.resource.data.white == request.auth.uid
        && request.resource.data.black == null;

      allow update: if isSignedIn() && (
        (isParticipant()
          && request.resource.data.white == resource.data.white
          && request.resource.data.black == resource.data.black)
        || (resource.data.black == null
          && request.resource.data.white == resource.data.white
          && request.resource.data.black == request.auth.uid)
      );

      allow delete: if false;
    }
  }
}
